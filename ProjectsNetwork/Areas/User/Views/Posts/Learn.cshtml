@model ProjectsNetwork.Models.Project;
@{

    Layout = "_Layout";
    ViewData["Title"] = Model.Name;
}
    <script>
        function post(projectId) {
            window.location.href = '@Url.Action("SubmitInterest", "Posts")' + "/?projectId=" + projectId.toString();
        }
        
    </script>
    <div class="container ">
        <div class="row" style="margin-top: 2%; margin-bottom: 2%">
            <div class="col-2 offset-md-10">
                
                <button type="button" class="btn btn-dark" onclick="post(@Model.Id)">REQUEST TO JOIN</button>
            </div>
        </div>


        <h1 class="text-center" style="text-transform:uppercase; font-family: Impact, Charcoal, sans-serif">@Model.Name</h1>
        <div class="container p-3 mb-2 bg-dark text-white" style="border-radius:1rem !important">
            <h4>DESCRIPTION:</h4>
            <div class="row">
                <div class="col">
                    <p>@Model.Description</p>
                </div>
            </div>
            <h4>PREFERED SKILLS:</h4>
            <div class="row">
                <div class="col">
                    <p>@Model.PrefferedSkills</p>
                </div>
            </div>
            <h4>TOPICS:</h4>
            <div class="row">
                <div class="col">
                    <p>AREAS OF INTEREST...Wher is this at??</p>
                </div>
            </div>
        </div>
        
     
        
        


    </div>


