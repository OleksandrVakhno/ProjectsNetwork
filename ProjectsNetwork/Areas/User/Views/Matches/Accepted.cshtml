@model List<ProjectsNetwork.Models.InterestedInProject>;
@{

    Layout = "_Layout";
    ViewData["Title"] = "Accepted Projects";
}

<script>
        function contact(id) {
            window.location.href = '@Url.Action("UserInfoAccepted","Communication")' + "?userId=" + id.toString();

        }
</script>

<div class="container ">

    @foreach (var interested in Model)
    {
        <div class="row text-center container p-3 mb-2 bg-dark text-white" style="border-radius:1rem !important">
            <div class="col">
                <h4 style="text-transform: capitalize;">@interested.Project.Name</h4>
            </div>
            <div class="col">
                <p>@interested.User.Email</p>
            </div>
            <div class="col">

                <button type="button" class="btn btn-light" onclick="contact('@interested.UserId')">Contact</button>
            </div>
        </div>
    }

</div>


