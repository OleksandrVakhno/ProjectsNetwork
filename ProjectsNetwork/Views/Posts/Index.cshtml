@model List<ProjectsNetwork.Models.Project>;
@{

    Layout = "_Layout";
    ViewData["Title"] = "Projects Posts";
}
    <div class="container ">
        <div class="row" style="margin-top: 2%; margin-bottom: 2%">
            <div class="col-2 offset-md-10">
                <script>
                        function post() {
                            window.location.href = '@Url.Action("Post", "Posts")';
                        }
                    </script>
                <button type="button" class="btn btn-dark" onclick="post()">Post Project</button>
            </div>
        </div>

        @foreach(var project in Model)
        {
            <div class="row text-center container p-3 mb-2 bg-dark text-white rounded ">
                <div class="col">
                    <h4>@project.Name</h4>
                </div>
                <div class="col">
                    <p>@project.Description</p>
                </div>
                <div class="col">
                    
                    <button type="button" class="btn btn-light" >Learn More</button>
                </div>
            </div>
        }
        
        


    </div>


